            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
            margin-bottom: 0;
        }

        .header h1 {
            font-size: 1.8rem;
            font-weight: 600;
            margin-bottom: 0.5rem;
        }

        .header-info {
            display: flex;
            gap: 2rem;
            font-size: 0.9rem;
        }

        .header-info span {
            background: rgba(255, 255, 255, 0.1);
            padding: 0.3rem 0.8rem;
            border-radius: 4px;
        }

        /* PestaÃ±as */
        .tabs {
            display: flex;
            background: white;
            border-bottom: 1px solid #e2e8f0;
            border-radius: 0;
        }

        .tab {
            padding: 1rem 2rem;
            cursor: pointer;
            font-weight: 500;
            border-bottom: 3px solid transparent;
            transition: all 0.3s ease;
        }

        .tab.active {
            border-bottom-color: #3b82f6;
            background: #f8fafc;
            color: #3b82f6;
        }

        .tab:hover:not(.active) {
            background: #f1f5f9;
        }

        /* Contenido de formularios */
        .form-container {
            background: white;
            border-radius: 0 0 12px 12px;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
            overflow: hidden;
        }

        .form-content {
            display: none;
            padding: 2rem;
        }

        .form-content.active {
            display: block;
        }

        /* Secciones de formulario */
        .form-section {
            background: #f8fafc;
            border-radius: 8px;
            padding: 1.75rem;
            margin-bottom: 1.5rem;
            border-left: 4px solid #3b82f6;
            border: 1px solid #e2e8f0;
