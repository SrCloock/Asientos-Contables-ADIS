    <script>
        // Funcionalidad de pestaÃ±as
        document.addEventListener('DOMContentLoaded', function() {
            const tabs = document.querySelectorAll('.tab');
            const formContents = document.querySelectorAll('.form-content');
            
            tabs.forEach(tab => {
                tab.addEventListener('click', () => {
                    // Remover clase active de todas las pestaÃ±as y contenidos
                    tabs.forEach(t => t.classList.remove('active'));
                    formContents.forEach(content => content.classList.remove('active'));
                    
                    // AÃ±adir clase active a la pestaÃ±a clickeada
                    tab.classList.add('active');
                    
                    // Mostrar el contenido correspondiente
                    const tabId = tab.getAttribute('data-tab');
                    document.getElementById(tabId).classList.add('active');
                });
            });

            // SimulaciÃ³n de cÃ¡lculo de IVA y retenciÃ³n
            const baseInputs = document.querySelectorAll('input[type="number"]');
            baseInputs.forEach(input => {
                input.addEventListener('input', function() {
                    const detalleLinea = this.closest('.detalle-linea');
                    if (detalleLinea) {
                        const base = parseFloat(this.value) || 0;
                        const tipoIVA = parseFloat(detalleLinea.querySelector('select').value) || 0;
                        const retencion = parseFloat(detalleLinea.querySelectorAll('select')[1].value) || 0;
                        
                        const cuotaIVA = (base * tipoIVA) / 100;
                        const cuotaRetencion = (base * retencion) / 100;
                        
                        detalleLinea.querySelectorAll('input.readonly')[0].value = cuotaIVA.toFixed(2);
                        detalleLinea.querySelectorAll('input.readonly')[1].value = cuotaRetencion.toFixed(2);
                    }
                });
            });

            // SimulaciÃ³n de cambio de tipo de ingreso en Form2
            const tipoIngresoSelect = document.querySelector('#form2 select');
            if (tipoIngresoSelect) {
                tipoIngresoSelect.addEventListener('change', function() {
                    const contrapartidaInput = document.querySelector('#form2 input.readonly');
                    if (this.value === 'caja') {
                        contrapartidaInput.value = '570000000';
                    } else {
                        contrapartidaInput.value = '430000000';
                    }
                });
            }
        });
    </script>
</body>
</html>